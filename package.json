{
  "name": "express-template",
  "version": "0.0.0",
  "about": "Minimal server included FlowJS",
  "port": 3000,
  "private": true,
  "scripts": {
    "setup": "concurrently \"npm install -g pm2 yarn nodemon\" \"yarn run update\"",
    "update": "concurrently \"yarn install\" \"yarn upgrade --latest\"",
    "build": "concurrently \"babel src -D --out-dir dist/ --ignore spec.js\"",
    "dev": "nodemon src/bin/www -w ./src -e \"js hbs\" --exec \"node -r babel-register \"",
    "start": "concurrently \"npm run build \" \"node dist/bin/www\"",
    "start-build": "node -r babel-register  dist/bin/www",
    "reload-server": "concurrently \"pm2 delete expresstemplate || true\" \"pm2 start --name=expresstemplate npm -- run start-build \"",
    "server": "concurrently \"npm run build \" \"npm run reload-server\"",
    "create-module": "node let create module"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~4.1.1",
    "express": "~4.17.1",
    "http-errors": "~1.7.3",
    "line-reader": "^0.4.0",
    "morgan": "~1.9.1",
    "pug": "2.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "concurrently": "^5.0.2",
    "flow-bin": "^0.116.1",
    "flow-typed": "^2.6.2",
    "install": "^0.13.0",
    "nodemon": "^2.0.2"
  }
}
